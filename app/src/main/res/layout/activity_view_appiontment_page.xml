    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="PREVIOUS"
            android:id="@+id/butVAPrevious"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="NEXT"
            android:id="@+id/butVANext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="0.05">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aptTableheader"
            >
            <TableRow>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.05" />
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.25" android:text="Time" android:gravity="center"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.30" android:text="Patient Name" android:gravity="center"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.4" android:text="Proposed Treatment" android:gravity="center"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="horizontal"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/apptTable"
                android:showDividers="middle"
                >
            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="NEW"
            android:id="@+id/butVANewAppointment"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="EDIT"
            android:id="@+id/butVAEditAppointment"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="DELETE"
            android:id="@+id/butVADeleteAppointment"/>
    </LinearLayout>

</LinearLayout>