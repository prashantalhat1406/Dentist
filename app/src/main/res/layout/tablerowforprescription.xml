<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/tableRowForPrescription" android:paddingTop="5dp" android:paddingBottom="5dp">
    <TextView android:id="@+id/txtAPCType"
        android:layout_weight="0.1"
        android:gravity="left"
        android:textSize="15dp"
        android:text="Tab"
        android:paddingLeft="5dp"
        />
    <TextView android:id="@+id/txtAPCTabName"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:text="Zerodol-P"
        />
    <TextView android:id="@+id/txtAPCWhen"
        android:layout_weight="0.25"
        android:gravity="right"
        android:textSize="15dp"
        android:text=" M - A - N "/>
    <TextView android:id="@+id/txtAPCDays"
        android:layout_weight="0.2"
        android:gravity="right"
        android:textSize="15dp"
        android:text="3 Days"
        />
    <Button android:layout_weight="0.05" android:background="@drawable/buttoncirclegreen" android:drawableStart="@mipmap/ic_delete"/>
</TableRow>